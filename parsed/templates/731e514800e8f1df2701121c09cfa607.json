{"components/blog/post":"<article class=\"blog-post\">\n\n  <h2 class=\"blog-post-title\">\n    <a href=\"{{url}}\">{{title}}</a>\n  </h2>\n\n  <div class=\"blog-post-meta\">\n    <time class=\"blog-post-date\">{{date_published}}</time>\n\n    {{#if this.author}}\n      <div class=\"blog-post-author\">\n        {{author}}\n      </div>\n    {{/if}}\n  </div>\n\n  <div class=\"blog-post-content {{#if summary}}summary{{/if}}\">\n    {{#if summary}}\n\n      {{#if this.thumbnail}}\n        <p>\n          <a class=\"blog-post-thumbnail\" href=\"{{url}}\" title=\"{{thumbnail.alt}}\">\n            <img src=\"{{getImage thumbnail 'product_zoom'}}\" alt=\"{{thumbnail.alt}}\">\n          </a>\n        </p>\n      {{/if}}\n\n      <p>{{{summary}}}</p>\n\n    {{else}}\n\n      <div class=\"rte\">\n        {{#if this.thumbnail}}\n          <p>\n            <img src=\"{{getImage thumbnail 'product_zoom'}}\" alt=\"{{thumbnail.alt}}\">\n          </p>\n        {{/if}}\n\n        {{{body}}}\n\n        {{#if this.sharing_buttons}}\n          <div class=\"blog-post-sharing\">\n            {{> components/snippets/sharing-buttons\n              sharing_url=sharing_url\n              sharing_title=sharing_title\n              sharing_source=sharing_source}}\n          </div>\n        {{/if}}\n      </div>\n\n    {{/if}}\n\n    {{#if this.tags}}\n      <div class=\"blog-post-tags\">\n        <span class=\"blog-post-tags-label\">{{lang 'blog.tags'}}</span>\n        <ul class=\"blog-post-tags-list\">\n          {{#each tags}}\n            <li class=\"blog-post-tag\">\n              <a href=\"{{url}}\">#{{name}}</a>\n            </li>\n          {{/each}}\n        </ul>\n      </div>\n    {{/if}}\n  </div>\n\n</article>\n","components/snippets/sharing-buttons":"<section class=\"sharing-buttons\">\n\n  {{#each sharing_source}}\n\n    {{#if service '===' 'facebook'}}\n      <a class=\"sharing-button\" href=\"http://www.facebook.com/sharer.php?u={{../../sharing_url}}\" onclick=\"window.open('http://www.facebook.com/sharer.php?u={{../../sharing_url}}', 'newwindow', 'width=600, height=450'); return false;\">\n        <i class=\"fa fa-facebook\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'twitter'}}\n      <a class=\"sharing-button\" href=\"https://twitter.com/share?url={{../../sharing_url}}&text={{../../sharing_title}}\" onclick=\"window.open('https://twitter.com/share?url={{../../sharing_url}}&text={{../../sharing_title}}', 'newwindow', 'width=600, height=450'); return false;\">\n        <i class=\"fa fa-twitter\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'email'}}\n      <a class=\"sharing-button\" href=\"mailto:?Subject={{../../sharing_title}}&amp;Body=I%20saw%20this%20and%20thought%20of%20you!%20 {{../../sharing_url}}\">\n        <i class=\"fa fa-envelope\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'print'}}\n      <a class=\"sharing-button\" href=\"javascript:window.print();\">\n        <i class=\"fa fa-print\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'pinterest'}}\n      <a class=\"sharing-button\" href=\"javascript:void((function()%7Bvar%20e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)%7D)());\">\n        <i class=\"fa fa-pinterest\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'google_plusone'}}\n      <a class=\"sharing-button\" href=\"https://plus.google.com/share?url={{../../sharing_url}}\" onclick=\"window.open('https://plus.google.com/share?url={{../../sharing_url}}', 'newwindow', 'width=600, height=450'); return false;\">\n        <i class=\"fa fa-google-plus\"></i>\n      </a>\n    {{/if}}\n\n    {{#if service '===' 'tumblr'}}\n      <a class=\"sharing-button\" href=\"https://www.tumblr.com/widgets/share/tool?canonicalUrl={{../../sharing_url}}&title={{../../sharing_title}}\" onclick=\"window.open('https://www.tumblr.com/widgets/share/tool?canonicalUrl={{../../sharing_url}}&title={{../../sharing_title}}', 'newwindow', 'width=600, height=450'); return false;\">\n        <i class=\"fa fa-tumblr\"></i>\n      </a>\n    {{/if}}\n\n  {{/each}}\n\n  {{#each sharing_source}}\n\n    {{#if service '===' 'facebook_like'}}\n      <a class=\"sharing-button facebook-like\">\n        <div class=\"fb-like\"\n          data-href=\"{{../../sharing_url}}\"\n          data-layout=\"button_count\"\n          data-action=\"like\"\n          data-show-faces=\"false\">\n        </div>\n      </a>\n    {{/if}}\n\n  {{/each}}\n</section>\n"}
