{"components/products/review-modal":"<div id=\"modal-review-form\" class=\"review-modal-container\">\r\n  <a href=\"#\" class=\"modal-close\">\r\n    <i class=\"fa fa-close\"></i>\r\n  </a>\r\n\r\n  <div class=\"modal-body\">\r\n    <div class=\"review-image-column\">\r\n      <figure class=\"review-image-container\">\r\n        {{#if product.main_image}}\r\n          <img src=\"{{getImage product.main_image 'product_item'}}\">\r\n        {{else}}\r\n          <img src=\"{{cdn '/assets/icons/icon-no-image.svg'}}\" alt=\"{{lang 'product.no_image'}}\" class=\"no-image\" data-product-images-main>\r\n        {{/if}}\r\n      </figure>\r\n    </div>\r\n\r\n    <div class=\"review-form-column\">\r\n      <h2 class=\"review-form-heading\">{{lang 'product.reviews.leave_review'}}</h2>\r\n      <form class=\"form form-leave-review\" action=\"{{urls.product.post_review}}\" method=\"post\" data-form-leave-review data-validated-form>\r\n\r\n        {{!-- Clickable Stars --}}\r\n        <div class=\"form-field review-form-stars\">\r\n          <div class=\"show-for-sr\">\r\n            {{lang 'product.reviews.rating_label'}}\r\n          </div>\r\n          <fieldset class=\"input-stars form-fieldset\">\r\n            <input type=\"radio\" id=\"5-stars\" class=\"show-for-sr\" name=\"revrating\" value=\"5\" required data-vd-message-required=\"{{lang 'product.reviews.form.rating_required'}}\">\r\n            <label for=\"5-stars\" class=\"star\" title=\"{{lang 'product.reviews.stars_count' num=5}}\">\r\n              <i class=\"fa fa-star\"></i>\r\n              <span class=\"show-for-sr\">{{lang 'product.reviews.stars_count' num=5}}</span>\r\n            </label>\r\n            <input type=\"radio\" id=\"4-stars\" class=\"show-for-sr\" name=\"revrating\" value=\"4\" required data-vd-message-required=\"{{lang 'product.reviews.form.rating_required'}}\">\r\n            <label for=\"4-stars\" class=\"star\" title=\"{{lang 'product.reviews.stars_count' num=4}}\">\r\n              <i class=\"fa fa-star\"></i>\r\n              <span class=\"show-for-sr\">{{lang 'product.reviews.stars_count' num=4}}</span>\r\n            </label>\r\n            <input type=\"radio\" id=\"3-stars\" class=\"show-for-sr\" name=\"revrating\" value=\"3\" required data-vd-message-required=\"{{lang 'product.reviews.form.rating_required'}}\">\r\n            <label for=\"3-stars\" class=\"star\" title=\"{{lang 'product.reviews.stars_count' num=3}}\">\r\n              <i class=\"fa fa-star\"></i>\r\n              <span class=\"show-for-sr\">{{lang 'product.reviews.stars_count' num=3}}</span>\r\n            </label>\r\n            <input type=\"radio\" id=\"2-stars\" class=\"show-for-sr\" name=\"revrating\" value=\"2\" required data-vd-message-required=\"{{lang 'product.reviews.form.rating_required'}}\">\r\n            <label for=\"2-stars\" class=\"star\" title=\"{{lang 'product.reviews.stars_count' num=2}}\">\r\n              <i class=\"fa fa-star\"></i>\r\n              <span class=\"show-for-sr\">{{lang 'product.reviews.stars_count' num=2}}</span>\r\n            </label>\r\n            <input type=\"radio\" id=\"1-stars\" class=\"show-for-sr\" name=\"revrating\" value=\"1\" required data-vd-message-required=\"{{lang 'product.reviews.form.rating_required'}}\">\r\n            <label for=\"1-stars\" class=\"star\" title=\"{{lang 'product.reviews.stars_count' num=1}}\">\r\n              <i class=\"fa fa-star\"></i>\r\n              <span class=\"show-for-sr\">{{lang 'product.reviews.stars_count' num=1}}</span>\r\n            </label>\r\n          </fieldset>\r\n        </div>\r\n\r\n        {{!-- Name --}}\r\n        {{> core/forms/common/text label=(lang 'product.reviews.form.name') name=\"revfromname\" id=\"revfromname\" required=\"true\" prefill=(lang 'product.reviews.form.name')}}\r\n\r\n        {{!-- Email --}}\r\n        {{> core/forms/common/email label=(lang 'product.reviews.form.email') name=\"email\" id=\"rating-email\" required=\"true\" prefill=(lang 'product.reviews.form.email')}}\r\n\r\n        {{!-- Subject --}}\r\n        {{> core/forms/common/text label=(lang 'product.reviews.form.subject') name=\"revtitle\" id=\"rating-title\" required=\"true\" prefill=(lang 'product.reviews.form.subject')}}\r\n\r\n        {{!-- Comments --}}\r\n        {{> core/forms/common/multiline label=(lang 'product.reviews.form.comments') name=\"revtext\" id=\"rating-comment\" required=\"true\" rows=6 prefill=(lang 'product.reviews.form.comments')}}\r\n\r\n        {{{product.reviews.recaptcha.markup}}}\r\n\r\n        <input type=\"hidden\" name=\"product_id\" value=\"{{product.id}}\" />\r\n        <input type=\"hidden\" name=\"action\" value=\"post_review\" />\r\n\r\n        {{#if product.reviews.throttleToken}}\r\n          <input type=\"hidden\" name=\"throttleToken\" value=\"{{product.reviews.throttleToken}}\" />\r\n        {{/if}}\r\n\r\n        <div class=\"form-field form-field-submit\">\r\n          <input type=\"submit\" class=\"form-submit review-modal-submit button button-primary\" value=\"{{lang 'product.reviews.form.submit'}}\">\r\n        </div>\r\n\r\n      </form>\r\n    </div>\r\n\r\n  </div>\r\n</div>\r\n","core/forms/common/email":"\n<div class=\"form-field form-field-common form-field-email {{#if required}} form-required{{/if}}\" id=\"{{id}}\">\n  <label class=\"form-label\">\n    <span class=\"form-field-title\">\n      {{label}}\n      {{#if required}}<span class=\"required-text\">{{lang 'common.required'}}</span>{{/if}}\n    </span>\n    <span class=\"form-field-control\">\n      <input class=\"form-input\"\n        id=\"input-{{id}}\"\n        name=\"{{name}}\"\n        type=\"email\"\n        placeholder=\"{{prefill}}\"\n        {{#if value}}value=\"{{value}}\"{{/if}}\n        {{#if private_id}}data-field-type=\"{{private_id}}\"{{/if}}\n        {{#if required}}required{{/if}}\n        aria-required=\"{{required}}\">\n    </span>\n  </label>\n</div>\n","core/forms/common/multiline":"{{!\n  Textarea form component\n\n  @param validation_message string\n         Custom validation message\n}}\n<div class=\"form-field form-field-common form-field-multiline {{#if required}}form-required{{/if}}\" id=\"{{id}}\">\n  <label class=\"form-label\">\n    <span class=\"form-field-title\">\n      {{label}}\n      {{#if required}}<span class=\"required-text\">{{lang 'common.required'}}</span>{{/if}}\n    </span>\n    <span class=\"form-field-control\">\n      <textarea\n        class=\"form-input\"\n        id=\"textarea-{{id}}\"\n        name=\"{{name}}\"\n        placeholder=\"{{prefill}}\"\n        rows=\"{{rows}}\"\n        {{#if required}}\n          required\n          {{#if validation_message}}\n            data-vd-message-required=\"{{validation_message}}\"\n          {{/if}}\n        {{/if}}\n        aria-required=\"{{required}}\">{{value}}</textarea>\n    </span>\n  </label>\n</div>\n","core/forms/common/text":"\n<div class=\"form-field form-field-common form-field-text {{#if required}} form-required{{/if}}\" id=\"{{id}}\">\n  <label class=\"form-label\">\n    <span class=\"form-field-title\">\n      {{label}}\n      {{#if required}}<span class=\"required-text\">{{lang 'common.required'}}</span>{{/if}}\n    </span>\n    <span class=\"form-field-control\">\n      <input class=\"form-input\"\n        id=\"input-{{id}}\"\n        name=\"{{name}}\"\n        type=\"text\"\n        placeholder=\"{{prefill}}\"\n        {{#if value}}value=\"{{value}}\"{{/if}}\n        {{#if private_id}}data-field-type=\"{{private_id}}\"{{/if}}\n        {{#if required}}required{{/if}}\n        aria-required=\"{{required}}\">\n    </span>\n  </label>\n</div>\n"}
