{"components/cart/coupon-input":"{{#if cart.coupons}}\n  <h2>{{lang 'cart.coupons.coupon' coupon=cart.coupons.0.code}}</h2>\n  <a class=\"button button-alt button-small\" href=\"{{cart.coupons.0.remove_url}}\">{{lang 'cart.coupons.remove_link'}} <i class=\"icon-close\"></i></a>\n{{else}}\n  <a class=\"cart-extras-tab coupon-code-add\" data-form-reveal>\n    {{lang 'cart.coupons.add_code'}}\n  </a>\n\n  <div class=\"cart-extras coupon-code hidden\" data-toggled-form>\n    <a href=\"#\" class=\"cart-extras-tab cart-extras-cancel\" data-form-hide>\n      {{lang 'cart.coupons.cancel'}}\n    </a>\n    <p><strong>{{lang 'cart.coupons.coupon_code'}}</strong></p>\n    <form class=\"form coupon-form\" method=\"post\" action=\"{{urls.cart}}\" data-form-type=\"coupon\">\n      <div class=\"form-input-wrapper\">\n        <input class=\"form-input\" data-error=\"{{lang 'cart.coupons.empty_error'}}\" type=\"text\" name=\"couponcode\" value=\"\" placeholder=\"{{lang 'cart.coupons.coupon_code'}}\" data-form-value>\n      </div>\n      <input class=\"button coupon-submit\" type=\"submit\" value=\"{{lang 'cart.coupons.button'}}\" data-form-submit>\n      <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n    </form>\n  </div>\n{{/if}}\n"}
