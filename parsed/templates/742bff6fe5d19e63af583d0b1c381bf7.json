{"components/cart/gift-cert-input":"<a class=\"cart-extras-tab gift-cert-redeem\" data-form-reveal>\n  {{lang 'cart.gift_certificates.add_certificate'}}\n</a>\n\n<div class=\"cart-extras hidden\" data-toggled-form>\n  <a href=\"#\" class=\"cart-extras-tab cart-extras-cancel\" data-form-hide>\n    {{lang 'cart.gift_certificates.cancel'}}\n  </a>\n  <p><strong>{{lang 'cart.gift_certificates.add_cert_label'}}</strong></p>\n  <form class=\"form giftcert-form\" method=\"post\" action=\"{{urls.cart}}\" data-form-type=\"giftcertificate\">\n    <div class=\"form-input-wrapper\">\n      <input class=\"form-input\" data-empty-error=\"{{lang 'cart.gift_certificates.empty_error'}}\" type=\"text\" name=\"certcode\" value=\"\" placeholder=\"{{lang 'cart.gift_certificates.add_cert_label'}}\" data-form-value>\n    </div>\n    <input class=\"button giftcert-submit\" type=\"submit\" value=\"{{lang 'cart.gift_certificates.button'}}\" data-form-submit>\n    <input type=\"hidden\" name=\"action\" value=\"applycoupon\">\n  </form>\n</div>\n\n{{#if cart.gift_certificates}}\n  <div class=\"giftcerts-redeemed\">\n    {{#each cart.gift_certificates}}\n        {{lang 'cart.gift_certificates.giftcert' code=code}}\n        <a href=\"{{remove_url}}\">{{lang 'cart.gift_certificates.remove_link'}}</a>\n        <h2>{{lang 'cart.coupons.coupon_code'}}</h2>\n    {{/each}}\n  </div>\n{{/if}}\n"}
