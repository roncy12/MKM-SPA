{"components/cart/cart-preview":"{{#if cart.items}}<span class=\"cart-count\">{{cart.quantity}}</span>{{/if}}\n\n<div class=\"cart-preview-wrap\">\n\n  {{#if cart.items}}\n    <div class=\"cart-preview-body\">\n      <ul class=\"cart-preview-list\">\n        {{#each cart.items}}\n          <li class=\"cart-preview-list-item\">\n\n            <div class=\"cart-preview-list-item-image-wrap\">\n              <div class=\"cart-preview-list-item-image\">\n                {{#if type '===' 'GiftCertificate'}}\n                  <a href=\"javascript:void(0)\">\n                    <img src=\"{{cdn '/assets/icons/giftcard-image.svg'}}\" alt=\"{{recipient}}\">\n                  </a>\n                {{else}}\n                  <a href=\"{{link}}\">\n                    {{#if image}}\n                      <img src=\"{{getImage image 'product_thumbnail'}}\" alt=\"{{name}}\" />\n                    {{else}}\n                      <img src=\"{{cdn '/assets/icons/icon-no-image.svg'}}\" alt=\"{{lang 'product.no_image'}}\">\n                    {{/if}}\n                  </a>\n                {{/if}}\n              </div>\n            </div>\n\n            <div class=\"cart-preview-list-item-details\">\n              <div class=\"cart-preview-list-item-name\">\n                <a href=\"{{link}}\" alt=\"{{name}}\">{{name}}</a>\n              </div>\n\n              <div class=\"cart-preview-list-item-price\">\n                {{{price.formatted}}} <span class=\"cart-preview-list-item-price-quantity\">&times;{{quantity}}</span>\n              </div>\n            </div>\n\n          </li>\n        {{/each}}\n      </ul>\n    </div>\n\n    <div class=\"cart-preview-subtotal\">\n      <div class=\"label\">{{lang 'cart.checkout.subtotal'}}</div>\n      <div class=\"total\">{{cart.sub_total.formatted}}</div>\n    </div>\n\n    <div class=\"cart-preview-footer\">\n      <a href=\"{{urls.cart}}\" class=\"button\">{{lang 'header.view_cart'}}</a>\n      <a href=\"{{urls.checkout.single_address}}\" class=\"button button-alt\">{{lang 'cart.checkout_label'}}</a>\n    </div>\n\n  {{else}}\n    <p class=\"cart-preview-empty\">{{lang \"cart.checkout.empty_cart\"}}</p>\n  {{/if}}\n</div>\n"}
